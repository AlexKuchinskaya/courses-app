{
    "compilerOptions": {
      "esModuleInterop": true,
      "jsx": "react",
      "lib": [
        "ES2021",
        "dom"
      ],
      "baseUrl": ".",
      "paths": {
        "@components/*": ["./src/components/*"],
        "@utils/*": ["./src/utils/*"],
        "@contexts/*": ["./src/contexts/*"],
        "@hooks/*": ["./src/hooks/*"],
        "@assets/*": ["./src/assets/*"],
        "@types": ["./src/types"],
        "@enums/*": ["./src/enums/*"],
        "@store/*": ["./src/store/*"],
        "@services/*": ["./src/services/*"],
        "@__mocks__/*": ["./src/__mocks__/*"],
      },
      "types": [
        "node",
        "jest",
        "@testing-library/jest-dom"
      ],
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "src/**/*",
      "src/declaration.d.ts",
      "src/utils/testing/setup-tests.ts"
    ]
  }