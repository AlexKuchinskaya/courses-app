{
    "compilerOptions": {
      "esModuleInterop": true,
      "jsx": "react",
      "lib": [
        "ES2021",
        "dom"
      ],
      "baseUrl": ".",
      "paths": {
        "@components/*": ["./src/components/*"],
        "@helpers/*": ["./src/helpers/*"],
        "@contexts/*": ["./src/contexts/*"],
        "@hooks/*": ["./src/hooks/*"],
        "@assets/*": ["./src/assets/*"],
        "@types": ["./src/types"],
        "@enums/*": ["./src/enums/*"],
        "@store/*": ["./src/store/*"],
      }
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "src/**/*",
      "src/declaration.d.ts",
    ]
  }