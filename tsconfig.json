{
    "compilerOptions": {
      "esModuleInterop": true,
      "jsx": "react",
      "lib": [
        "ES2021",
        "dom"
      ],
      "baseUrl": ".",
      "paths": {
        "components": ["src/components/*"],
        "helpers": ["src/helpers/*"],
        "contexts": ["src/contexts/*"],
        "hooks": ["src/hooks/*"],
        "assets": ["src/assets/*"],
        "utils": ["src/utils/*"],
        "types": ["src/types/*"]
      }
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "src",
      "src/declaration.d.ts",
    ]
  }